<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.neocom.mobilerefueling.view.TopTitleBar
        android:id="@+id/get_car_state_tpb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:middleTitle="车辆查询" />

    <com.jcodecraeer.xrecyclerview.XRecyclerView
        android:id="@+id/daily_balance_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/get_car_state_tpb" />

    <Button
        android:id="@+id/submit_btn"
        style="@style/Font15_white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/normal_item_height"
        android:layout_alignParentBottom="true"
        android:background="@drawable/agree_btn_select"
        android:text="确定"
        android:visibility="gone" />

</RelativeLayout>