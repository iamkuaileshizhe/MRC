<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.neocom.mobilerefueling.view.TopTitleBar
        android:id="@+id/setting_topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        app:middleTitle="关于" />


    <com.allen.library.SuperTextView
        android:id="@+id/version_code"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:sLeftTextString="当前版本"
        app:sRightIconHeight="15dp"
        app:sRightIconRes="@drawable/arrow_right"
        app:sRightIconWidth="15dp" />

    <com.allen.library.SuperTextView
        android:id="@+id/about_us"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="2dp"
        app:sLeftTextString="关于我们"
        app:sRightIconHeight="15dp"
        app:sRightIconRes="@drawable/arrow_right"
        app:sRightIconWidth="15dp" />

</LinearLayout>