<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.neocom.mobilerefueling.view.TopTitleBar
        android:id="@+id/voice_setting_topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        app:middleTitle="用户设置" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1dp"
        android:background="@color/divider" />


    <com.allen.library.SuperTextView
        android:id="@+id/voice_tts_speach"
        android:layout_width="match_parent"
        android:layout_height="@dimen/normal_item_height"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp"
        app:sDividerLineType="both"
        app:sLeftTextString="语音播报"
        app:sRightViewType="switchBtn"
        app:sSwitchIsChecked="true"
        app:sThumbResource="@drawable/thumb"
        app:sTrackResource="@drawable/track" />

</LinearLayout>