<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <com.neocom.mobilerefueling.view.TopTitleBar
        android:id="@+id/choose_address_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="联系人"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_20sp" />

        <EditText
            android:id="@+id/choose_address_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:hint="请输入联系人姓名"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_20sp" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/_1dp"
        android:layout_margin="5dp"
        android:background="@color/address_bg_ground" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="联系电话"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_20sp" />

        <EditText
            android:id="@+id/choose_address_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:hint="请输入联系人电话"
            android:textSize="@dimen/_20sp" />

    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/_1dp"
        android:layout_margin="5dp"
        android:background="@color/address_bg_ground" />

    <RelativeLayout
        android:id="@+id/choose_address_zone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="地区"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_20sp" />

        <TextView
            android:id="@+id/choose_address_addr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:singleLine="true"
            android:text="请选择>>"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_20sp" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/_1dp"
        android:layout_margin="5dp"
        android:background="@color/address_bg_ground" />

    <EditText
        android:id="@+id/choose_address_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginTop="@dimen/_2dp"
        android:hint="详细地址"
        android:minLines="3"
        android:textColor="@android:color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设为默认"
            android:textColor="@android:color/black" />

        <CheckBox
            android:id="@+id/default_cb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black" />

    </LinearLayout>


    <Button
        android:id="@+id/ok_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:text="确定"
        android:textColor="@android:color/white"
        android:textSize="@dimen/normal_font_size" />

</LinearLayout>