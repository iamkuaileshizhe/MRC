<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/top_title_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/abc_action_bar_default_height_material"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/top_bar_finish_ll"
            android:layout_width="@dimen/_20dp"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:src="@mipmap/back_top" />

        </LinearLayout>


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/top_bar_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@null"
                android:cursorVisible="false"
                android:text="新增标签"
                android:textColor="@color/colorBarText"
                android:textColorHint="@color/colorBarText"
                android:textSize="@dimen/_20sp" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/top_bar_ok_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="7dp"
            android:gravity="center"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="确定"
                android:textColor="@color/colorBarText"
                android:textSize="17sp"
                android:visibility="invisible" />
        </LinearLayout>
    </LinearLayout>


    <RelativeLayout
        android:id="@+id/activity_pre_order"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray_white"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="车辆类型："
                android:textSize="18.0sp" />

            <LinearLayout
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1.0"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/car_type"
                    style="?android:attr/textViewStyle"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="请选择车辆类型"
                    android:background="@drawable/acm_inputbox"
                    android:gravity="left|center"
                    android:singleLine="true"
                    android:textSize="18sp" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="2dp"
                android:text="▼"
                android:textSize="14.0sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_car_license_inputbox_content"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/app_cate_area_height"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:padding="20dp"

            android:visibility="visible">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:paddingBottom="15dp"
                android:text="输入车牌号"
                android:textColor="#9DA9B4"
                android:textSize="26sp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/et_car_license_inputbox1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/car_license_inputbox"
                    android:focusable="false"
                    android:gravity="center_horizontal|center_vertical" />

                <TextView
                    android:id="@+id/et_car_license_inputbox2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/car_license_inputbox"
                    android:focusable="false"
                    android:gravity="center_horizontal|center_vertical" />

                <TextView
                    android:id="@+id/et_car_license_inputbox3"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/car_license_inputbox"
                    android:focusable="false"
                    android:gravity="center_horizontal|center_vertical" />

                <TextView
                    android:id="@+id/et_car_license_inputbox4"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/car_license_inputbox"
                    android:focusable="false"
                    android:gravity="center_horizontal|center_vertical" />

                <TextView
                    android:id="@+id/et_car_license_inputbox5"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/car_license_inputbox"
                    android:focusable="false"
                    android:gravity="center_horizontal|center_vertical" />

                <TextView
                    android:id="@+id/et_car_license_inputbox6"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/car_license_inputbox"
                    android:focusable="false"
                    android:gravity="center_horizontal|center_vertical" />

                <TextView
                    android:id="@+id/et_car_license_inputbox7"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/car_license_inputbox"
                    android:focusable="false"
                    android:gravity="center_horizontal|center_vertical" />
            </LinearLayout>


            <TextView
                android:id="@+id/write_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10dp"
                android:textSize="@dimen/_16sp" />

        </LinearLayout>




        <LinearLayout

            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <android.inputmethodservice.KeyboardView
                android:id="@+id/keyboard_view"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="#F0EFF4"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:keyBackground="@drawable/bg_white_gray_selector"
                android:keyPreviewLayout="@layout/key_preview_layout"
                android:keyTextColor="#5E5E5E"
                android:keyTextSize="18sp"
                android:labelTextSize="18sp"
                android:paddingTop="5dp"
                android:shadowColor="#ffffff"
                android:shadowRadius="0.0"
                android:visibility="visible" />
        </LinearLayout>


    </RelativeLayout>


</LinearLayout>