<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="1dp"
    android:elevation="@dimen/_5dp"
    android:padding="@dimen/_10dp"
    app:cardCornerRadius="10dp">


    <LinearLayout
        android:id="@+id/lv_xgjg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/_5dp"
            android:text="修改优惠金额"
            android:textColor="@color/color_text_black"
            android:textSize="@dimen/normal_font_size" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5dp"
            android:background="@drawable/et_bg"
            android:padding="@dimen/_5dp">

            <EditText
                android:id="@+id/jine_et_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="请输入修改金额"
                android:inputType="numberDecimal"
                android:maxLength="5"
                android:padding="@dimen/_5dp"
                android:singleLine="true"
                android:textSize="@dimen/normal_font_size" />

        </RelativeLayout>


        <LinearLayout
            android:id="@+id/bottom_ll_sub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="5dp">


            <com.allen.library.SuperButton
                android:id="@+id/xg_cancle"
                android:layout_width="@dimen/_0dp"
                android:layout_height="40dp"
                android:layout_marginRight="@dimen/_5dp"
                android:layout_weight="1"
                android:text="取消"
                android:textColor="@color/white"
                android:textSize="@dimen/small_font_size"
                app:sCornersRadius="5dp"
                app:sSelectorNormalColor="@color/mian_tab_col_normal"
                app:sSelectorPressedColor="@color/mian_tab_font_color"
                app:sUseSelector="true" />


            <com.allen.library.SuperButton
                android:id="@+id/xg_ok"
                android:layout_width="@dimen/_0dp"
                android:layout_height="40dp"
                android:layout_marginLeft="@dimen/_5dp"
                android:layout_weight="1"
                android:text="确定修改"
                android:textColor="@color/white"
                android:textSize="@dimen/small_font_size"
                app:sCornersRadius="5dp"
                app:sSelectorNormalColor="@color/col_login_btn_normal"
                app:sSelectorPressedColor="@color/col_login_btn_pressed"
                app:sUseSelector="true" />

        </LinearLayout>


    </LinearLayout>


</android.support.v7.widget.CardView>