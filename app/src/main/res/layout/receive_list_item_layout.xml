<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:padding="@dimen/_5dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <com.neocom.mobilerefueling.view.OrderConbindView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

        <RelativeLayout
            android:id="@+id/order_no_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5dp">

            <TextView
                android:id="@+id/order_no_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text=""
                android:textColor="@android:color/black"
                android:textSize="@dimen/normal_font_size" />

            <ImageView
                android:id="@+id/order_arrow"
                android:layout_width="@dimen/_10dp"
                android:layout_height="18dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/order_no_tv"
                android:src="@mipmap/ex_close"
                android:textColor="@android:color/black"
                android:visibility="invisible" />


            <!--android:background="@drawable/order_state_shape"-->
            <!--android:text="已完成"-->
            <TextView
                android:id="@+id/order_state_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingBottom="@dimen/_1dp"
                android:paddingLeft="@dimen/_5dp"
                android:paddingRight="@dimen/_5dp"
                android:paddingTop="@dimen/_1dp"
                android:text=""
                android:textColor="@android:color/white"
                android:textSize="@dimen/normal_font_size" />
        </RelativeLayout>

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/order_no_ll"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="2dp"
            android:background="@color/order_divider" />


        <com.neocom.mobilerefueling.view.OrderConbindView
            android:id="@+id/receive_estamate_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

        </com.neocom.mobilerefueling.view.OrderConbindView>

        <com.neocom.mobilerefueling.view.OrderConbindView
            android:id="@+id/receive_oil_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </com.neocom.mobilerefueling.view.OrderConbindView>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1dp"
            android:background="@color/divider_line" />

        <com.neocom.mobilerefueling.view.OrderConbindView
            android:id="@+id/receive_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </com.neocom.mobilerefueling.view.OrderConbindView>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1dp"
            android:background="@color/divider_line" />

        <com.neocom.mobilerefueling.view.OrderConbindView
            android:id="@+id/receive_carlist_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </com.neocom.mobilerefueling.view.OrderConbindView>

        <com.neocom.mobilerefueling.view.OrderConbindView
            android:id="@+id/receive_carlist_state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

        </com.neocom.mobilerefueling.view.OrderConbindView>

    </LinearLayout>

</LinearLayout>