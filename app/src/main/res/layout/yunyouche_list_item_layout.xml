<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical">


        <com.neocom.mobilerefueling.view.OrderConbindView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"></com.neocom.mobilerefueling.view.OrderConbindView>

        <RelativeLayout
            android:id="@+id/order_no_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5dp">

            <TextView
                android:id="@+id/order_no_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text=""
                android:textColor="@color/indicator_color"
                android:textSize="@dimen/_20sp" />

            <ImageView
                android:id="@+id/order_arrow"
                android:layout_width="@dimen/_10dp"
                android:layout_height="18dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/order_no_tv"
                android:src="@mipmap/ex_close"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/order_state_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/order_state_shape"
                android:padding="@dimen/_2dp"
                android:text="已完成"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_20sp" />
        </RelativeLayout>

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/order_no_ll"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:background="@color/order_divider" />


        <com.neocom.mobilerefueling.view.OrderConbindView
            android:id="@+id/receive_estamate_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </com.neocom.mobilerefueling.view.OrderConbindView>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1dp"
            android:background="@color/divider_line" />

        <com.neocom.mobilerefueling.view.OrderConbindView
            android:id="@+id/receive_oil_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </com.neocom.mobilerefueling.view.OrderConbindView>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1dp"
            android:background="@color/divider_line" />

        <com.neocom.mobilerefueling.view.OrderConbindView
            android:id="@+id/receive_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </com.neocom.mobilerefueling.view.OrderConbindView>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1dp"
            android:visibility="gone"
            android:background="@color/divider_line" />

        <com.neocom.mobilerefueling.view.OrderConbindView
            android:id="@+id/receive_carlist_count"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="wrap_content">

        </com.neocom.mobilerefueling.view.OrderConbindView>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1dp"
            android:visibility="gone"
            android:background="@color/divider_line" />

        <com.neocom.mobilerefueling.view.OrderConbindView
            android:id="@+id/receive_carlist_state"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="wrap_content">

        </com.neocom.mobilerefueling.view.OrderConbindView>

    </LinearLayout>


</LinearLayout>